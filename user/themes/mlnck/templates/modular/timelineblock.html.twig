<div class="timeline-wrapper">
  {{dump('~~TIMELINE::START~~')}}
  {% for p in page.collection|sort|reverse %}
    {% if p.header.taxonomy.category[0] != 'Page' %}
    <a href="/focus/{{p.slug}}">
      <div class="timeline-link">
        <div class="fleck -{{strtolower(p.header.taxonomy.category[0])}}"></div>
        <div class="link {{ (strlen(p.title) > 15) ? '-long' : '' }}">
            <span class="linkdate">{{p.date|date('Y.m.d')}}</span> &bull; <span class="linktitle">{{ p.title }}</span>
            {{dump(p)}}
        </div>
      </div>
      </a>
    {% endif %}
  {% endfor %}
  {{dump('~~TIMELINE::END~~')}}
</div>
